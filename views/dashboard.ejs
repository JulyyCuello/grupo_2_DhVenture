            </ul>
        </nav>
    </header>
    <h1 class="titulo-agregar-producto">Agregar Producto</h1>
    <section class="section-dashboard">
        <form action="/products/agregar-producto" method="post">
            <div>
                <label for="name">Marca:</label>
                <input class="input-dashboard" type="text" id="name" name="name" required><br><br>
            </div>
            <div>
                <label for="modelo">Modelo:</label>
                <input class="input-dashboard" type="text" id="modelo" name="modelo" required><br><br>
            </div>
            <div>
                <label for="almacenamiento">Almacenamiento:</label>
                <input class="input-dashboard" type="text" id="almacenamiento" name="almacenamiento" required><br><br>
            </div>
            <div>
                <label for="memoria">Memoria:</label>
                <input class="input-dashboard" type="text" id="memoria" name="memoria" required><br><br>
            </div>
            <div>
                <label for="description">Descripción:</label><br>
                <textarea class="descripcion" id="description" name="description" rows="4" cols="50"></textarea><br><br>
            </div>
            <div>
                <label for="category">Categoría:</label>
                <select id="category" name="category">
                    <option value="monitor">Seleccionar</option>
                    <option value="monitor">Monitor</option>
                    <option value="monitor">Notebook</option>
                    <option value="monitor">Pc Escritorio</option>
                    <option value="mouse">Mouse</option>
                    <option value="teclado">Teclado</option>
                    <option value="gabinete">Gabinete</option>
                    <option value="memorias">Memorias</option>
                    <option value="disco-rigido">Disco Rígido</option>
                    <option value="mother">Mother</option>
                    <option value="fuente">Fuente</option>
                    <option value="pendrive">Pendrive</option>
                </select><br><br>
            </div>
            <div>
                <label for="price">Precio:</label>
                <input class="input-dashboard" type="number" id="price" name="price" required><br><br>
            </div>
            <div>
                <label for="image">Imagen:</label>
                <input class="file" type="file" id="image" name="image" accept="image/*" required><br><br>
            </div>
            <button type="submit">Agregar Producto</button>
        </form>
