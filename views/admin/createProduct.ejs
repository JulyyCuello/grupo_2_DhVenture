

<body class="editProduct-body">
    <div class="mx-auto col-4">
      <h1 class="my-4">Nuevo Producto</h1>
  
      <div class="my-3"> 
        <a href="/admin/productos" class="btn btn-primary">Volver a la lista</a>
      </div>
  
      <div>
      <form action="/admin/crearProducto" method="post">
          <div class="mb-3">
            <label class="form-label">Producto</label>
            <input type="text" class="form-control" name="title">
          </div>
          <div>
          <select class="form-select form-select mb-3" aria-label="Desplegar opciones" name="marca">
            <option>Seleccionar marca</option>
            <% marcas.forEach(c => { %>
              <option value="<%= c.id %>"><%= c.marca %></option>
            <% }) %>
          </select>
            </div>
          <div class="mb-3">
            <label class="form-label">Precio</label>
            <input type="number" class="form-control" name="price">
          </div>
          <div class="mb-3">
            <label class="form-label" for="exampleCheck1">Descripcion</label>
            <textarea type="text" class="form-control" placeholder="Colocar descripcion del produco" name="description"></textarea>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" id="nuevo" value="nuevo" name="seccion" checked>
            <label class="form-check-label" for="inlineCheckbox1">Nuevo</label>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" id="oferta" value="oferta" name="seccion">
            <label class="form-check-label" for="oferta">Oferta</label>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" id="proximamente" value="proximamente" name="seccion">
            <label class="form-check-label" for="proximamente">Proximamente</label>
          </div>
          <div class="form-check form-switch my-3">
            <input class="form-check-input" type="checkbox" id="stock" name="stock" checked>
            <label class="form-check-label" for="stock">Stock</label>
          </div>
          <div class="mb-3">
            <label for="formFileMultiple" class="form-label">Seleccionar imagen</label>
            <input class="form-control" type="file" id="img" name="image">
          </div>
            <button type="submit" class="btn btn-primary">Crear producto</button>
        </form>
        </div>
    </div>
  </body>