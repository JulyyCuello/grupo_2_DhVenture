<body class="editProduct-body">
  <div class="mx-auto col-4">
    <h1 class="my-4">Editar Producto</h1>

    <div class="my-3">
      <a href="/admin/productos" class="btn btn-primary">Volver a la lista</a>
    </div>

    <form action="/admin/editProduct/<%= product.id %>?_method=PUT" method="post">
        <div class="mb-3">
          <label class="form-label">Producto</label>
          <input type="Text" class="form-control" name="title" value="<%= product.title %>">
        </div>
        <select class="form-select form-select mb-3" aria-label="Desplegar opciones" name="marcas">
          <option>Seleccionar marca</option>
          <% marcas.forEach(c => { %>
            <option <%= c.marca === product.marca ? "selected" : null %> value="<%= c.id %>"><%= c.marca %></option>
          <% }) %>
        </select>
        <div class="mb-3">
          <label class="form-label">Precio</label>
          <input type="number" class="form-control" value="<%= product.price %>">
        </div>
        
        <div class="mb-3">
          <label class="form-label" for="exampleCheck1">Descripcion</label>
          <textarea type="text" class="form-control" placeholder="Colocar descripcion del produco"><%= product.description %></textarea>
        </div>

        <div class="form-check form-check-inline">
          <input <%= product.nuevo ? "checked" : null %> class="form-check-input" type="checkbox" id="inlineCheckbox1" value="nuevo" name="categoria">
          <label class="form-check-label" for="inlineCheckbox1">Nuevo</label>
        </div>

        <div class="form-check form-check-inline">
          <input <%= product.oferta ? "checked" : null %> class="form-check-input" type="checkbox" id="inlineCheckbox2" value="oferta" name="categoria">
          <label class="form-check-label" for="inlineCheckbox2">Oferta</label>
        </div>

        <div class="form-check form-check-inline">
          <input <%= product.proximamente ? "checked" : null %> class="form-check-input" type="checkbox" id="inlineCheckbox2" value="proximamente" name="categoria">
          <label class="form-check-label" for="inlineCheckbox2">Proximamente</label>
        </div>

        <div class="form-check form-switch my-3">
          <input <%= product.stock ? "checked" : null %> class="form-check-input" type="checkbox" id="flexSwitchCheckChecked">
          <label class="form-check-label" for="flexSwitchCheckChecked">Stock</label>
        </div>
        <div class="mb-3">
          <label for="formFileMultiple" class="form-label">Seleccionar imagen</label>
          <input class="form-control" type="file" id="formFileMultiple" multiple>
        </div>

      <button type="submit" class="btn btn-primary">Guardar</button>
      </form>
  </div>
</body>
