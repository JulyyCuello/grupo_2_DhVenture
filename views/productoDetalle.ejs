<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head', {title: ''}) %>
<body>
	<!-- Header -->
	<%- include('./partials/header') %>

    <!---body-->

    <div class="container detalle">
		<div class="row">
			<div class="col-12">
				<h2 class="products-titulo m-3">Detalle del producto: <%= product.name %></h2>
			</div>
		</div>
		<div class="product-detail">
			<div class="row">
				<div class="col-12 col-lg-8">
					<img src="/images/<%= product.image %>" alt="product image" class="product-detail-img">
					<p class="product-detail-description">
						<%= product.description %>
					</p>
				</div>
				<div class="col-12 col-lg-4">
					<article class="product-detail-info">
						<h2 class="product-detail-title"><%= product.name %></h2>
						
							<p class="product-detail-price small">
								<span> $ <%= toThousand(product.price) %></span>
								<b><%= product.discount %>% OFF</b>
							</p>
							<p class="product-detail-price">
								$<%= toThousand(product.price - (product.price * product.discount / 100)) %>
							</p>

						<ul class="actions-list">
							<li>
								<i class="fas fa-credit-card"></i>
								<p>Pag√° en 12 cuotas sin interes</p>
							</li>
							<li>
								<i class="fas fa-store"></i>
								<p>Retiro gratis en locales del vendedor</p>
							</li>
						</ul>

						<a href="" class="btn btn-primary">COMPRAR AHORA</a>
						<hr>

						<a href="/admin/editar-producto/<%= product.id %>" class="btn btn-primary ">EDITAR PRODUCTO</a>
						<form action="/admin/eliminar-producto/<%= product.id %>?_method=DELETE" method="POST" style="display: inline-flex" >
							<button type="submit" class="btn btn-primary bot-eliminar">ELIMINAR</button>
						</form>
					</article>
				</div>
			</div>
		</div>
	</div>

    <!--footer-->

    <%- include('./partials/footer') %>
